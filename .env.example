# AutoSentinel Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Wallet & RPC
# ===========================================

# Deployer wallet private key (without 0x prefix)
# NEVER commit the actual key to git!
PRIVATE_KEY=your_private_key_here

# Infura API key for Sepolia RPC
INFURA_KEY=your_infura_key_here

# ===========================================
# REQUIRED: Chainlink Functions
# ===========================================

# Your Chainlink Functions subscription ID
# Create at: https://functions.chain.link/
FUNCTIONS_SUBSCRIPTION_ID=

# ===========================================
# AFTER DEPLOYMENT
# ===========================================

# Contract address (fill after running deploy:sepolia)
CONTRACT_ADDRESS=

# ===========================================
# OPTIONAL: Verification
# ===========================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=

# ===========================================
# OPTIONAL: Configuration
# ===========================================

# Decision threshold (0-100, default: 75)
THRESHOLD=75

# Gas limit for Functions callback (default: 300000)
GAS_LIMIT=300000

# ===========================================
# DEBUG
# ===========================================

# Enable debug logging
DEBUG=false

# Update source code when configuring
UPDATE_SOURCE_CODE=false
